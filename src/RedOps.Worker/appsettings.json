{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=RedOpsDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/redops-worker-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "OutboxProcessor": {
    "ProcessingIntervalSeconds": 30,
    "BatchSize": 100,
    "MaxRetryAttempts": 3,
    "RetentionDays": 7
  },
  "SyncScheduler": {
    "ScheduleIntervalMinutes": 15,
    "MinimumSyncIntervalMinutes": 30,
    "AutoSyncCronExpression": "0 */30 * * * *",
    "OperationRetentionDays": 30
  },
  "HealthCheck": {
    "CheckIntervalMinutes": 5,
    "MaxMemoryMB": 1024,
    "DatabaseTimeoutSeconds": 30,
    "ExternalApiTimeoutSeconds": 10
  },
  "Redmine": {
    "BaseUrl": "https://your-redmine-instance.com",
    "ApiKey": "your-redmine-api-key"
  },
  "AzureDevOps": {
    "OrganizationUrl": "https://dev.azure.com/your-organization",
    "PersonalAccessToken": "your-azure-devops-pat"
  }
}